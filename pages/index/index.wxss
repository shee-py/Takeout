/* ———————————————————————————————————————————————————————————————————————————————————————————————————————— */
/* ----------------------------header--------------------------------------------------- */

/* 美团拼好饭 gps定位 */
.title-location-row{
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 5px;
    padding-left: 10px;
}
.title{
    font-size: 18px;
    font-weight: bold;
    color: black;
}
.location{
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 14px;
    color: black;
    cursor: pointer;
}

.location-icon {
    width: 16px;
    height: 16px;
}
/* 10元点外卖0配送费 超百万用户真实评价 */
.text{
    display: flex;
    gap: 10px;
    padding-left: 10px;
    margin-top: 5px;
}
.text text{
    font-size: 10px;
    color: gray;
}
/* 搜索框 */
.search-box{
    border-radius: 80rpx;
    padding: 10rpx 40rpx ;
    box-shadow: 2rpx 6rpx rgba(0, 0, 0, 0.1);
}
.search-input{
    height: 60rpx;
    font-size: 28rpx;
    color: grey;
}
/* -----------------header------------------------------------------------- */

/* -----------------neck---------------------------------------------------- */

/* neck-title-nav 爆品一口价6.9元吃大餐*/
.neck-title-nav{
    display: flex;
    align-items: center;
    gap: 4px;
}
.neck-title-big{
    font-size: 34rpx;
    font-weight: bold;
    margin-left: 5rpx;
}
.neck-title-small{
    font-size: 11px;
    padding-top: 3px;
}
.more{
    font-size: 25rpx;
    color: grey;
    padding-left: 43%;
    padding-top: 4px;
}
/* gooos-list---------------------neck */
.goods-list{
    width: 357px;
    display: flex;
    flex-direction: row;
    padding: 4px;
}
  /* 单个商品项，设置固定宽度，flex-shrink避免压缩 */
.goods-item{
    width: 190rpx;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-left: 0px;
}
  /* 商品图片，设置宽高和圆角 */
  .goods-img {
    width: 150rpx;
    height: 150rpx;
    border-radius: 10rpx;
  }
  /* 店铺名称，设置字体大小、颜色 */
  .shop-name {
    font-size: 24rpx;
    color: #333;
    margin-top: 8rpx;
  }
  /* 商品名称，设置字体大小、颜色，显示一行省略 */
  .goods-name {
    font-size: 22rpx;
    color: #666;
    margin-top: 4rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  /* 补贴信息，设置字体大小、颜色 */
  .subsidy {
    font-size: 22rpx;
    color: #999;
    margin-top: 4rpx;
  }
  /* 价格区域，设置字体大小、颜色 */
  .price-area {
    margin-top: 6rpx;
  }
  /* 当前价格，设置字体大小、颜色，突出显示 */
  .current-price {
    font-size: 24rpx;
    color: #ff5722;
    font-weight: bold;
  }

/* ----------------ncek---------------------------------------------------------------------------------- */

/* --------------------navigator------------------------------------------------------------------------- */

/* 分类导航样式 */
.goods-kind-nav{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
}
.goods-kind-nav::-webkit-scrollbar{
    display: none;
}
/* -----nav----- */
.nav-item{
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 20%;
    margin-bottom: 10px;
    flex-shrink: 0;
}
.nav-icon {
    width: 50px;
    height: 50px;
    border-radius: 8px;
    object-fit: cover;
    display: block;
}
.nav-text {
    margin-top: 5px;
    font-size: 12px;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* -----tag----- */

.tag-container {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    margin-top: 10px;
    overflow-x: auto;
    padding: 0 10px;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
}
.tag-container::-webkit-scrollbar{
    display: none;
}
.tag-item {
    padding: 5px 10px;
    margin-right: 10px;
    margin-bottom: 10px;
    background-color: white;
    border-radius: 15px;
    font-size: 12px;
    flex-shrink: 0;
}

/* -------------------------------------navigator---------------------------------------------------- */

/* --------------------------------------导航分类区下面拼单即成----------------------------- */

/* 拼单区左右滑动 */
.scroll-wrap{
    width: 100%;
    white-space: nowrap;
    overflow-x: auto;
    padding: 0 15rpx;
    box-sizing: border-box;
    height: 189px;
}

/* 单个商店拼单区域 */
.group-buy-container{
    display: inline-flex;
}

.group-buy-item {
    background-color: #fff;
    border-radius: 10rpx;
    padding: 15rpx;
    box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
    margin-right: 15rpx;
    box-sizing: border-box;
    width: 338px;
    margin-top: 0px;
}


/* 店名商标 时间距离 */
.group-buy-img {
    width: 50rpx;
    height: 37.5rpx;
    border-radius: 10rpx;
    float: left;
    margin-right: 20rpx;
    padding-top: 2px;
}
  
.shop-info {
    margin-bottom: 17px;
    display: flex;
    gap: 135px;
}

.shop-name {
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
}
  
.distance-time {
    font-size: 26rpx;
    color: #999;
    margin-top: 5rpx;
}
/* 拼单区域 下面框架整体部分----product-list---- */
.product-list {
    display: flex;
    flex-wrap: wrap;
    align-items:baseline;
}
/* 餐饮商品 价格销量----product-item---- */
.product-item {
    width: 30%;
    margin-right: 5%;
    margin-bottom: 10rpx;
}
.product-img {
    width: 100%;
    height: 100px;
    border-radius: 10rpx;
}
.product-name {
    font-size: 26rpx;
    color: black;
    margin-top: 5rpx;
}
.product-price-sold{
    display: flex;
    gap: 8px;
    align-items: center;
}
.product-price {
    font-size: 26rpx;
    color: red;
}
.sold-info {
    font-size: 24rpx;
    color: grey;
}
/* 拼单中if事件按钮----join-end----- */
.join-end{
    position: relative;
    width: 80px;
    height: 30px;
    border-radius: 20rpx;
    border: 1px solid grey;
    background-color: grey;
}
.join-btn{
    position: absolute;
    padding-left: 8px;
    padding-top: 4px;
    font-weight: bold; 
    color: white;
}
.end-tag{
    position: absolute;
    padding-left: 16px;
    padding-top: 4px;
    font-weight: bold; 
    color: white;
}
