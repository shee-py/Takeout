/* --------------------navigator------------------------------------------------------------------------- */

/* 分类导航样式 */
.goods-kind-nav{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
}
.goods-kind-nav::-webkit-scrollbar{
    display: none;
}
/* -----nav----- */
.nav-item{
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 20%;
    margin-bottom: 10px;
    flex-shrink: 0;
}
.nav-icon {
    width: 50px;
    height: 50px;
    border-radius: 8px;
    object-fit: cover;
    display: block;
}
.nav-text {
    margin-top: 5px;
    font-size: 12px;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* -----tag----- */

.tag-container {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    margin-top: 10px;
    overflow-x: auto;
    padding: 0 10px;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
}
.tag-container::-webkit-scrollbar{
    display: none;
}
.tag-item {
    padding: 5px 10px;
    margin-right: 10px;
    margin-bottom: 10px;
    background-color: white;
    border-radius: 15px;
    font-size: 12px;
    flex-shrink: 0;
}

